@model UpDown.Models.carusel_images

@{
    ViewBag.Title = "AddCarouselImage";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .separator
    {
        height: 20px;
        }
    input[type="text"]
    {
        width: 400px;
        }
</style>

<script>
    $(function () {
        $("#empty").change(function () {
            if ($(this).attr("checked") != 'checked') {
                alert($(this).attr("checked"));
            }
        });
    });
</script>

<h2>Carusel images</h2>

@using (Html.BeginForm("AddCarouselImage", "Admin", FormMethod.Post, new { id = "frm", role = "form", enctype = "multipart/form-data" }))
{
    <fieldset>
        <legend>Carusel images - Add</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.url)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.url) <span>OR</span>&nbsp;<label for="empty">Empty</label><input type="checkbox" id="empty" />
        </div>
        <div class="separator"></div>
        <div class="editor-label">
        <label>Image</label>
            
        </div>
        <div class="editor-field">
            <input type="file" name="image" />
        </div>
        <div class="separator"></div>
        <div class="editor-label">
            @Html.LabelFor(model => model.alt)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.alt)
        </div>
        <div class="separator"></div>
        <div class="editor-label">
            @Html.LabelFor(model => model.text)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.text)
        </div>
        <div class="separator"></div>
        <div class="editor-label">
            @Html.LabelFor(model => model.orderBy)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.orderBy)
        </div>
        <div class="separator"></div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


