@using UpDown.Models
@model List<genre>

@{
    ViewBag.Title = "Genres";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="main-content">
                    <section class="row">
                        <section class="col-md-12 panel products-wrap bgc-wrap">
                            <section class="panel-header">
                                <h3 class="header-title"></h3>
                            </section>
                            <section class="panel-body">
                                <section class="action-bar">
                                    <button class="btn btn-theme btn-add-new-user">
                                        <a href="@Url.Action("AddGenre", "Admin")">
                                            <i class="fa fa-plus"></i> Add New
                                        </a>
                                    </button>
                                </section>
                                <table class="table recent-activities-table order-column" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Name</th>   
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (genre item in Model)
                                        {
                                            <tr>
                                                <td>@item.genreID</td>
                                                <td>@item.name</td>
                                                <td>
                                                    <a class="" title="Sub Genres" href="@Url.Action("SubGenres", "Admin", new {genreId = item.genreID })">Sub Genres</a>
                                                    <a class="fa fa-eye"  title="View" href="@Url.Action("EditGenre", "Admin", new { genreId = item.genreID })"></a>
                                                    <a class="fa fa-trash-o" title="Delete" href="@Url.Action("DeleteGenre", "Admin", new {genreId = item.genreID })" onclick="return confirm('Are you sure?')"></a>
                                                </td>
                                            </tr>
                                        }
                                        
                                    </tbody>
                                </table>
                            </section>
                        </section>
                    </section>
                </section>
